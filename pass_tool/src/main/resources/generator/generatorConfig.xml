<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="javaFileEncoding" value="UTF-8"/>
            <property name="autoDelimitKeywords" value="true"/>
        </plugin>

        <commentGenerator>
            <property name="javaFileEncoding" value="UTF-8"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${pom.jdbc.generate.driver}"
                        connectionURL="${pom.jdbc.generate.url}"
                        userId="${pom.jdbc.generate.user}"
                        password="${pom.jdbc.generate.password}"/>

        <!--实体类-->
        <javaModelGenerator targetPackage="${pom.mybatis.entity.package}"
                            targetProject="${pom.current.project.dir}\src\main\java"/>
        <!--映射文件-->
        <sqlMapGenerator targetPackage="${pom.mybatis.xml.package}"
                         targetProject="${pom.current.project.dir}\src\main\resources"/>
        <!--接口-->
        <javaClientGenerator targetPackage="${pom.mybatis.dao.package}"
                             targetProject="${pom.current.project.dir}\src\main\java" type="XMLMAPPER"/>


        <table schema="geemu" tableName="pass_tool_user_info" domainObjectName="UserInfo" mapperName="UserInfoDao">
            <generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true"/>
        </table>

        <table schema="geemu" tableName="pass_tool_account" domainObjectName="Account" mapperName="AccountDao">
            <generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true"/>
        </table>

        <table schema="geemu" tableName="pass_tool_assortment" domainObjectName="Assortment" mapperName="AssortmentDao">
            <generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true"/>
        </table>

    </context>
</generatorConfiguration>